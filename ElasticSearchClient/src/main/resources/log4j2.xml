<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
	<Properties>
		<Property name="log-path">../logs</Property>
	</Properties>
	
	<Appenders>
		<File name="File" fileName="${log-path}/esclient.log">
			<PatternLayout>
				<pattern>
					[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n
				</pattern>
			</PatternLayout>
		</File>
		<!-- <Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout>
				<pattern>
					[%-5level] %d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %c{1} - %msg%n
				</pattern>
			</PatternLayout>
		</Console> -->

	</Appenders>
	
	<Loggers>
		<Logger name="logging_test" level="debug">
			<AppenderRef ref="File" level="debug" />
			<!-- <AppenderRef ref="STDOUT" level="debug" /> -->
		</Logger>
		<Root level="debug">
			<AppenderRef ref="File" />
		</Root>
	</Loggers>
</Configuration>